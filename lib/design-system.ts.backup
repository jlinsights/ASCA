// Component Size Variants
export type ComponentSize = 'xs' | 'sm' | 'md' | 'lg' | 'xl';
export type ComponentVariant = 'default' | 'secondary' | 'outline' | 'ghost' | 'destructive';

// Utility Functions
export const getStatusColor = (status: string): string => {
  const statusColors: Record<string, string> = {
    published: 'summer-jade',
    draft: 'autumn-gold',
    review: 'temple-gold',
    archived: 'stone-gray',
    pending: 'vermillion',
    active: 'celadon-green',
    inactive: 'stone-gray',
  };
  return statusColors[status] || 'celadon-green';
};

export const getDifficultyColor = (difficulty: string): string => {
  const difficultyColors: Record<string, string> = {
    beginner: 'summer-jade',
    intermediate: 'autumn-gold',
    advanced: 'vermillion',
    master: 'temple-gold',
    expert: 'ink-black',
  };
  return difficultyColors[difficulty] || 'celadon-green';
};

export const getTypeColor = (type: string): string => {
  const typeColors: Record<string, string> = {
    video: 'vermillion',
    audio: 'temple-gold',
    document: 'celadon-green',
    interactive: 'summer-jade',
    practice: 'autumn-gold',
  };
  return typeColors[type] || 'celadon-green';
};

// CSS Class Generators
export const generateButtonClasses = (
  size: ComponentSize = 'md',
  variant: ComponentVariant = 'default'
): string => {
  const baseClasses = 'inline-flex items-center justify-center rounded-md font-medium transition-all duration-300 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-celadon-green/50 disabled:pointer-events-none disabled:opacity-50';
  
  const sizeClasses = {
    xs: 'h-7 px-2 text-xs',
    sm: 'h-8 px-3 text-sm',
    md: 'h-10 px-4 text-sm',
    lg: 'h-11 px-6 text-base',
    xl: 'h-12 px-8 text-base',
  };

  const variantClasses = {
    default: 'bg-celadon-green text-ink-black hover:bg-celadon-green/90 shadow-sm',
    secondary: 'bg-silk-cream text-ink-black hover:bg-silk-cream/80 border border-celadon-green/20',
    outline: 'border border-celadon-green/30 text-celadon-green hover:bg-celadon-green hover:text-ink-black',
    ghost: 'text-ink-black hover:bg-silk-cream/50',
    destructive: 'bg-vermillion text-rice-paper hover:bg-vermillion/90 shadow-sm',
  };

  return `${baseClasses} ${sizeClasses[size]} ${variantClasses[variant]}`;
};

export const generateCardClasses = (variant: 'default' | 'elevated' | 'bordered' = 'default'): string => {
  const baseClasses = 'rounded-lg bg-rice-paper transition-all duration-300';
  
  const variantClasses = {
    default: 'border border-celadon-green/20',
    elevated: 'shadow-lg border border-celadon-green/10',
    bordered: 'border-2 border-celadon-green/30',
  };

  return `${baseClasses} ${variantClasses[variant]}`;
};

