# ================================
# 개발 환경 설정
# ================================
NODE_ENV=development
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# 개발 서버 설정
DEV_SERVER_HOST=localhost
DEV_SERVER_PORT=3000
NEXT_PUBLIC_DEV_MODE=true

# 개발 도구 설정
ANALYZE=false
BUNDLE_ANALYZE=false
NEXT_DEBUG=false

# ================================
# 인증 시스템 (개발용)
# ================================
# 개발 환경에서 사용할 인증 시스템
DEV_AUTH_ENABLED=true

# ================================
# 데이터베이스 (Supabase)
# ================================
# Get these keys from https://supabase.com/dashboard
NEXT_PUBLIC_SUPABASE_URL=본인_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=본인_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ================================
# 외부 API 연동
# ================================
# Airtable Configuration
# Get these from https://airtable.com/developers/web/api/introduction
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_airtable_base_id_here

# V0 API Configuration
# Get your API key from https://v0.dev/
V0_API_KEY=your_v0_api_key_here

# Unsplash API (이미지 검색용)
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here

# ================================
# 관리자 권한 설정
# ================================
SUPER_ADMIN_EMAILS=admin@asca.kr,director@asca.kr
ADMIN_EMAILS=manager@asca.kr,content@asca.kr
EDITOR_EMAILS=editor@asca.kr,writer@asca.kr
VIEWER_EMAILS=viewer@asca.kr

# ================================
# 보안 설정 (새로 추가됨)
# ================================
# 개발용 관리자 바이패스 (매우 주의!)
DEV_ADMIN_BYPASS=false
DEV_ADMIN_TOKEN=dev-admin-token-change-in-production

# Rate Limiting 설정
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS 설정
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE
CORS_ALLOW_CREDENTIALS=true

# 보안 모니터링
SECURITY_AUDIT_ENABLED=true
SECURITY_ALERT_EMAIL=security@asca.kr
SECURITY_LOG_RETENTION_DAYS=30

# ================================
# 개발 모드 설정
# ================================
# 개발 모드에서 관리자 권한 체크 우회 (보안 주의!)
DEV_ADMIN_MODE=false

# 개발 모드에서 사용할 테스트 데이터
USE_MOCK_DATA=true

# API 응답 지연 시뮬레이션 (ms)
API_DELAY_SIMULATION=0

# ================================
# 로깅 및 모니터링
# ================================
# 로그 레벨 (debug, info, warn, error)
LOG_LEVEL=debug

# 성능 모니터링
ENABLE_PERFORMANCE_MONITORING=true

# Sentry (에러 추적)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here

# ================================
# 한국 시장 특화 서비스
# ================================
# Channel.io (고객지원)
NEXT_PUBLIC_CHANNEL_IO_KEY=your_channel_io_key_here

# Cal.com (예약 시스템)
NEXT_PUBLIC_CAL_COM_USERNAME=your_cal_com_username_here

# 카카오 API
NEXT_PUBLIC_KAKAO_APP_KEY=your_kakao_app_key_here
KAKAO_ADMIN_KEY=your_kakao_admin_key_here

# ================================
# 개발 도구 설정
# ================================
# 개발 서버 실행 시 자동으로 브라우저 열기
OPEN_BROWSER=true

# 개발 서버 핫 리로드 설정
FAST_REFRESH=true

# TypeScript 타입 체크
TYPE_CHECK_ON_BUILD=true

# ESLint 체크
LINT_ON_BUILD=true

# 개발 중 콘솔 로그 활성화
ENABLE_CONSOLE_LOGS=true

# ================================
# 공통 설정
# ================================
NEXT_PUBLIC_API_BASE=https://api.example.com 